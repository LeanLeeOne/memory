<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leanlee.memory.back.mapper.RestaurantMapper">

    <select id="query" resultType="com.leanlee.memory.back.entity.Restaurant">
        SELECT id, name, total, guests, timestamp, address, longitude, latitude, summary, branch
        FROM restaurant t
        <where>
            <if test="id != null and id != ''">
                id = #{id}
            </if>
        </where>
        <if test="rows != null and rows != ''">
            LIMIT #{rows}
        </if>
        <if test="offset != null and offset != ''">
            OFFSET #{offset}
        </if>
        ORDER BY t.timestamp DESC
    </select>

    <select id="sites" resultType="com.leanlee.memory.back.entity.Site">
        SELECT id, longitude, latitude
        FROM restaurant
    </select>
</mapper>