<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leanlee.memory.back.mapper.RestaurantMapper">

    <select id="count" resultType="int">
        SELECT count(*)
        FROM restaurant
    </select>

    <select id="query" resultType="com.leanlee.memory.back.entity.Restaurant">
        SELECT id, name, total, guests, timestamp, address, longitude, latitude, summary, is_branch AS branch, url
        FROM restaurant t
        <where>
            <if test="id != null and id != ''">
                id = #{id}
            </if>
        </where>
        ORDER BY t.timestamp DESC
        LIMIT #{limit}
        OFFSET #{offset}
    </select>

    <insert id="add" parameterType="com.leanlee.memory.back.entity.Restaurant">
        INSERT INTO restaurant
        <trim prefix="(" suffix=")" suffixOverrides=",">
            name,
            total,
            guests,
            url,
            <if test="timestamp != null and timestamp != ''">
                timestamp,
            </if>
            <if test="address != null and address != ''">
                address,
            </if>
            <if test="longitude != null and longitude != ''">
                longitude,
            </if>
            <if test="latitude != null and latitude != ''">
                latitude,
            </if>
            <if test="summary != null and summary != ''">
                summary,
            </if>
            <if test="branch != null and branch != ''">
                is_branch,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{name},
            #{total},
            #{guests},
            #{url},
            <if test="timestamp != null and timestamp != ''">
                #{timestamp},
            </if>
            <if test="address != null and address != ''">
                #{address},
            </if>
            <if test="longitude != null and longitude != ''">
                #{longitude},
            </if>
            <if test="latitude != null and latitude != ''">
                #{latitude},
            </if>
            <if test="summary != null and summary != ''">
                #{summary},
            </if>
            <if test="branch != null and branch != ''">
                #{branch},
            </if>
        </trim>
    </insert>

    <select id="sites" resultType="com.leanlee.memory.back.entity.Site">
        SELECT id, longitude, latitude
        FROM restaurant
    </select>
</mapper>